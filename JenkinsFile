pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t neneobianodo/pythonimage .'
            }
        }
        
        stage('Test'){
            steps{
                // Add your test steps here. For example:
                sh 'docker run --name test-container -d -p 8000:8000 neneobianodo/pythonimage'
                sh 'curl localhost:8001'
                sh 'docker stop test-container && docker rm test-container'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker run -d -p 8000:8000 --name=my-tonado-app-container neneobianodo/pythonimage'
            }
        }
    }
}


