pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t neneobianodo/pythonimage .'
            }
        }
        
        stage('Test'){
            steps{
                // Add your test steps here. For example:
                sh 'docker run --name my-tornado-app-container -d -p 8000:8000 neneobianodo/pythonimage'
                sh 'curl localhost:8000'
                sh 'docker stop my-tornado-app-container && docker rm my-tornado-app-container'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker run -d -p 8000:8000 --name=my-tornado-app-container neneobianodo/pythonimage'
            }
        }
    }
}


